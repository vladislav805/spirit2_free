<set
		android:shareInterpolator="true"
		xmlns:android="http://schemas.android.com/apk/res/android">
	<alpha
			interpolator="@android:anim/accelerate_interpolator"
			duration="500"
			fromAlpha="0.0"
			toAlpha="1.0"
			xmlns:android="http://schemas.android.com/apk/res/android" />
